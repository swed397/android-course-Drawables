<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/star_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/star_image" />

        <TextView
            android:id="@+id/human_counetr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/green"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/wine_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/wine_image" />

        <TextView
            android:id="@+id/ai_counter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="50sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/field"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/tic_tac_toe_grid"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/field_view_1_1"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_1_2"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_1_3"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_2_1"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_2_2"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_2_3"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />


        <ImageView
            android:id="@+id/field_view_3_1"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_3_2"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />

        <ImageView
            android:id="@+id/field_view_3_3"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/x_o_chooser" />
    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_button"
        android:text="Hard reset" />
</FrameLayout>